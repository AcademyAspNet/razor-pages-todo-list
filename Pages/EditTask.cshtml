@page
@model ToDoList.Pages.EditTaskModel

<div class="container-fluid border-bottom border-primary mb-3">
    <p class="fs-4">Редактирование задачи</p>
</div>

<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Заголовок задачи:</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description">Описание задачи:</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <input class="form-check-input" asp-for="IsDone" />
        <label class="form-check-label" asp-for="IsDone">Задача выполнена</label>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CreatedAt">Дата создания задачи:</label>
        <input class="form-control" asp-for="CreatedAt" />
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-floppy me-1"></i>
            Сохранить
        </button>
    </div>
</form>